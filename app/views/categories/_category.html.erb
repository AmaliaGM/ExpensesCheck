<nav class="navbar navbar-dark bg-primary">
<h2 class="navbar-brand" href="#">
<div class="container-fluid">
<%= category.icon %> <%= category.name %>
</h2>
  </div>
</nav>
<br>
<div class="hstack gap-3">
  <div class="bg-light border">Total Spent:</div>
  <div class="bg-light border ms-auto"><%= number_to_currency(category.expenses.sum(:price)) %>
  
  </div>
  </div>
  <%= link_to "Add expense", new_expense_path, class: 'gap-3' %>
<br>

<div>
<%= form.number_field :user_id, id: :category_user_id, value: current_user.id, type: :hidden %>
</div>

<% category.expenses.each do |expense| %>
<div class="hstack gap-3">
  <%= expense.title %>
  <div class="ms-auto"><%= expense.price %></div>
  </div>
  </div>
  <%= link_to "Add expense", new_expense_path, class: 'gap-3' %>
  <% end %>
